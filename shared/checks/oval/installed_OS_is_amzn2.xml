<def-group>
  <definition class="inventory" id="installed_OS_is_amzn2" version="3">
    <metadata>
      <title>Amazon Linux 2</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <reference ref_id="cpe:/o:amzn:2" source="CPE" />
      <description>The operating system installed on the system is Amazon Linux 2</description>
    </metadata>
    <criteria comment="current OS is 2" operator="AND">
      <extend_definition comment="Installed OS is part of the Unix family" definition_ref="installed_OS_is_part_of_Unix_family" />
      <criterion comment="Amazon Linux is installed" test_ref="test_amzn" />
      <criterion comment="Amazon Linux 2 is installed" test_ref="test_amzn2" />
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="all_exist" comment="/etc/amzn exists" id="test_amzn" version="1">
    <unix:object object_ref="obj_amzn" />
  </unix:file_test>
  <unix:file_object comment="check /etc/amzn file" id="obj_amzn" version="1">
    <unix:filepath>/etc/amzn</unix:filepath>
  </unix:file_object>

  <ind:textfilecontent54_test check="all" check_existence="at_least_one_exists" comment="Check Custom OS version" id="test_amzn2" version="1">
    <ind:object object_ref="obj_amzn2" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_amzn2" version="1" comment="Check Amazon Linux version">
    <ind:filepath>/etc/amzn</ind:filepath>
    <ind:pattern operation="pattern match">^2.[0-9]+$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

</def-group>